<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.santiago.catbox.activity.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/splash_imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/begin"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/splash_version_textView"
        android:layout_below="@id/splash_imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#5cc8ff"
        android:textAlignment="center"/>

</RelativeLayout>
